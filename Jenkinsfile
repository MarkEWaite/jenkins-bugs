#!groovy

@Library('globalPipelineLibraryMarkEWaite@branch-for-checkout-in-library') _
import com.markwaite.Assert
import com.markwaite.Build

/* Only keep the 10 most recent builds. */
properties([[$class: 'BuildDiscarderProperty',
                strategy: [$class: 'LogRotator', numToKeepStr: '10']]])

node {
  stage('Checkout') {
    // JENKINS-50394 reports missing object exception during branch indexing
    checkout scm
  }

  stage('Build') {
    /* Call the ant build. */
    def my_step = new com.markwaite.Build()
    my_step.ant 'info'
  }

  stage('Verify') {
    def my_check = new com.markwaite.Assert()
    my_check.logContains('.*End of git log messages on this branch.*', 'Missing concluding message')
  }
}
