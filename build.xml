<project name="JENKINS-11000" default="increment" basedir=".">
  <description>Also used in remoting-fake</description>

  <target name="info" description="Report environment information">
    <echo>
java version is ${java.version}
java runtime version is ${java.runtime.version}
    </echo>
    <exec executable="git" failonerror="true">
      <arg value="branch"/>
    </exec>
    <echo>project name is ${ant.project.name}</echo>
    <java classname="org.apache.tools.ant.Main">
        <arg value="-projecthelp" />
        <arg value="-buildfile" />
        <arg value="${ant.file}" />
    </java>
  </target>

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Show JENKINS-28529 builds when it shouldn't">
    <echo>java is ${java.version}</echo>
    <exec executable="git">
      <arg value="pull"/>
    </exec>
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="[${ant.project.name}] build++, was ${build.number}"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
      <arg value="cache"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
      <arg value="bare"/>
    </exec>
  </target>

</project>
