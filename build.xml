<project name="JENKINS-21007" default="increment" basedir=".">
  <description>Also used in jgit-fake job</description>

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Check JENKINS-20941 - submodule authentication">
    <echo>java is ${java.version}</echo>
    <exec executable="git">
      <arg value="pull"/>
    </exec>
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="[${ant.project.name}] build++, was ${build.number}"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
      <arg value="cache"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
      <arg value="bare"/>
    </exec>
  </target>

  <target name="info" description="Info report">
    <echo>java is ${java.version}</echo>
    <echo>project name is ${ant.project.name}</echo>
    <java classname="org.apache.tools.ant.Main">
	<arg value="-projecthelp" />
	<arg value="-buildfile" />
	<arg value="${ant.file}" />
    </java>
  </target>

</project>
