<project name="JENKINS-36637" default="submit-changes" basedir=".">

  <!-- Submit changes to repository using bad strings -->
  <target name="submit-changes" description="Submit changes">
    <exec executable="python" output="output">
      <arg value="submit_changes.py" />
      <arg value="${ant.project.name}" />
    </exec>
    <delete file="output" quiet="true"/>
  </target>

  <!-- Info about branches -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <git command="branch" />
    <git command="log">
      <args>
        <arg value="-n" />
        <arg value="20" />
      </args>
    </git>
    <!-- Fail build if not a sparse checkout - see Jenkinsfile -->
    <available file="README.md" property="README.exists"/>
    <fail message="Checkout was not sparse - found README.md" if="README.exists"/>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
