<project name="JENKINS-52844" default="increment" basedir=".">

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Show JENKINS-52844 is a bug">
    <exec executable="git">
      <arg value="pull"/>
    </exec>
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="${ant.project.name} ${user.name} ビルド番号をインクリメント,${build.number} でした"/>
    </exec>
  </target>

  <!-- Info about this workspace -->
  <target name="info" description="Report info about this repo">
    <echo>user dir is ${user.dir}</echo>
    <exec executable="git">
      <arg value="branch"/>
    </exec>
    <echo>user dir is ${user.dir}</echo>
  </target>

</project>
