<project name="JENKINS-29603" default="increment-and-test" basedir=".">

  <!-- jenkins.hostname is hostname of Jenkins server to notify -->
  <property name="jenkins.hostname" value="jenkins.markwaite.net" />

  <property environment="env"/>

  <target name="increment" description="Increment build number">
    <git command="pull" />
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] build++, was ${build.number}"/>
      </args>
    </git>
    <!-- push to origin, intentionally do not push to cache or bare -->
    <git command="push" />
    <!-- Poke the notifyCommit URL with url and branches arguments -->
    <!-- Should start the build -->
    <exec executable="curl" failonerror="true">
      <arg value="-s" />
      <arg value="http://${jenkins.hostname}:8080/git/notifyCommit" />
      <arg value="-d" />
      <!-- <arg value="url=https://github.com/MarkEWaite/jenkins-bugs" /> -->
      <arg value="url=git://github.com/MarkEWaite/jenkins-bugs.git" />
      <arg value="-d" />
      <arg value="branches=has-slash/JENKINS-29603" />
    </exec>
  </target>

  <target name="test" description="Extract polling date from job's polling log" if="env.BUILD_URL">
    <echo>${env.BUILD_URL}/scmPollLog/</echo>
    <exec executable="curl" failonerror="true">
      <arg value="-s" />
      <arg value="-v" />
      <arg value="http://mark-pc2.markwaite.net:8080/job/Bugs-Individual/job/JENKINS-29603-notifyCommit-branch-with-slash-1/scmPollLog/" />
      <!-- <arg value="${env.BUILD_URL}/scmPollLog/" /> -->
      <redirector>
        <outputfilterchain>
          <linecontainsregexp>
            <regexp pattern=".*Started on .*" />
          </linecontainsregexp>
        </outputfilterchain>
      </redirector>
    </exec>
  </target>

  <target name="increment-and-test" description="Increment build number and test job output" depends="increment,test" />

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo" depends="test">
    <echo>JENKINS_URL is ${env.JENKINS_URL}</echo>
    <echo>JOB_NAME is ${env.JOB_NAME}</echo>
    <echo>xx is ${env.JENKINS_URL}/${env.JOB_NAME}</echo>
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <git command="branch" />
    <!-- JENKINS-29603 reports that branches with slashes passed in branches
         argument of notifyCommit are ignored. -->
    <echo>Displaying git log messages on this branch from last 15 minutes</echo>
    <git command="log">
      <args>
        <arg value="--since='15 minutes ago'"/>
      </args>
    </git>
    <echo>End of git log messages on this branch from last 15 minutes</echo>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
