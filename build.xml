<project name="JENKINS-31828" default="increment" basedir=".">

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Show JENKINS-31828 is fixed">
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="${user.name} JENKINS-31828, was ${build.number}"/>
    </exec>
  </target>

  <target name="info" description="Info about JENKINS-31828">
    <echo>java is ${java.version}</echo>
    <echo>=== Start of git log output</echo>
    <exec executable="git">
      <arg value="log"/>
      <arg value="-n"/>
      <arg value="1"/>
    </exec>
    <echo>=== End of git log output</echo>
  </target>

</project>
