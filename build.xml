<project name="JENKINS-64000" default="increment" basedir=".">

  <target name="increment" description="Increment build number">
    <git command="pull" />
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <property name="tag.name" value="${ant.project.name}-${build.number}"/>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] build++, was ${build.number}"/>
      </args>
    </git>
    <!-- Tag predecessor commit with previous build number -->
    <!-- Not needed now that we have a few tags in the history
    <git command="tag">
      <args>
        <arg value="-a"/>
        <arg value="-m"/>
        <arg value="Annotated tag comment for ${tag.name}"/>
        <arg value="${tag.name}"/>
        <arg value="HEAD^"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="origin"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="origin"/>
        <arg value="${tag.name}"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="cache"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="cache"/>
        <arg value="${tag.name}"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="bare"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="bare"/>
        <arg value="${tag.name}"/>
      </args>
    </git>
    -->
    <!-- End of section that is not needed now that we have a few tags in the history -->
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <echo>git tags for ${ant.project.name} in the workspace include:</echo>
    <!-- JENKINS-64000 reports that tag settings are ignored in pipeline definition. -->
    <git command="tag">
      <args>
        <arg value="--list"/>
        <arg value="${ant.project.name}-*"/>
      </args>
    </git>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
