<project name="JENKINS-35501" default="increment" basedir=".">

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo" depends="git-status,format-files">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <exec executable="git">
      <arg value="diff"/>
    </exec>
  </target>

  <target name="git-status" description="Report git status">
    <exec executable="git">
      <arg value="status"/>
    </exec>
  </target>

  <!-- Format files in this repository -->
  <target name="format-files" description="Add line terminators and end of file as appropriate">
    <fixcrlf srcdir="." eol="crlf" eof="add"                 includes="**/*.bat" />
    <fixcrlf srcdir="." eol="lf"   eof="remove" tab="remove" includes="Jenkinsfile" />
    <fixcrlf srcdir="." eol="lf"   eof="remove"              includes="**/*.sh" />
    <fixcrlf srcdir="." eol="lf"   eof="remove" tab="add"    includes="**/Makefile" />
  </target>

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Increment the build number" depends="format-files">
    <echo>java is ${java.version}</echo>
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
      <arg value="."/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="${user.name} incremented build number, was ${build.number}"/>
      <arg value="build.number"/>
    </exec>
  </target>

</project>
