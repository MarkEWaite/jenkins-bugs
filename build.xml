<project name="JENKINS-55939" default="increment" basedir=".">

  <property environment="env" />
  <!-- Give value in case env does not contain one -->
  <property name="env.JENKINS_URL" value="http://mark-pc2.markwaite.net:8080" />

  <target name="increment" description="Increment build number">
    <git command="pull" />
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] build++, was ${build.number}"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <git command="branch" />
    <!-- JENKINS-55939 - REST API broke compatibility in 4.0.0-rc -->
    <exec executable="wget" failonerror="true">
      <arg value="--output-document" />
      <arg value="build-data.json" />
      <arg value="${env.JENKINS_URL}/job/Bugs-Pipeline-Checks/job/jenkins-bugs-multibranch-pipeline/job/JENKINS-55939/api/json?pretty=true&amp;tree=name,lastSuccessfulBuild[number,url,timestamp,result,actions[lastBuiltRevision[SHA1]]],builds[number,url,timestamp,result,actions[lastBuiltRevision[SHA1]]]{0,20}" />
    </exec>
    <exec executable="grep" failonerror="true">
      <arg value="-E" />
      <arg value="JENKINS-55939|lastBuiltRevision|SHA1" />
      <arg value="build-data.json" />
    </exec>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
