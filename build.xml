<project name="JENKINS-43468" default="increment" basedir=".">

  <property environment="env"/>
  <condition property="changeLogCount" value="${env.CHANGESET_SIZE}" else="0">
    <isset property="env.CHANGESET_SIZE"/>
  </condition>

  <target name="increment" description="Increment build number">
    <echo>java is ${java.version}</echo>
    <buildnumber/>
    <exec executable="git" outputproperty="git.remote.output" failonerror="true">
      <arg value="remote"/>
    </exec>
    <resourcecount property="git.remote.count">
      <tokens>
        <concat>
          <filterchain>
            <tokenfilter>
              <stringtokenizer delims="${line.separator}"/>
            </tokenfilter>
          </filterchain>
          <propertyresource name="git.remote.output"/>
        </concat>
      </tokens>
    </resourcecount>
    <!-- Fail build if extra remotes are defined, this is a polling bug check, 
         so don't use the notifyCommit hooks that are often configured in local
         caches of the same repository -->
    <echo>Remote count is ${git.remote.count} from output: '${git.remote.output}'</echo>
    <fail message="Too many remotes defined">
      <condition>
        <not>
          <equals arg1="${git.remote.count}" arg2="1"/>
        </not>
      </condition>
    </fail>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="${ant.project.name} ${user.name} buildnumber++, was ${build.number}"/>
        <arg value="build.number"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <git command="branch" />
    <!-- JENKINS-43468 reports that polling configured from inside
         Jenkinsfile always rebuilds if a specific 'checkout scm' is used.
         -->
    <echo>Displaying ${changeLogCount} git log messages in changeset for this build - CHANGESET_SIZE=${env.CHANGESET_SIZE}</echo>
    <git command="log">
      <args>
        <arg value="-n"/>
        <arg value="${changeLogCount}"/>
      </args>
    </git>
    <echo>End of ${changeLogCount} git log messages in changeset for this build</echo>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
