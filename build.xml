<project name="JENKINS-35687" default="increment" basedir=".">

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Increment for JENKINS-39905">
    <echo>java is ${java.version}</echo>
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
      <arg value="."/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="${user.name} was ${build.number}"/>
      <arg value="build.number"/>
    </exec>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <loadfile property="large-file-contents" srcFile="large-file.lfs">
      <filterchain>
        <linecontains>
          <contains value="Content of this file is tracked by git large file support"/>
        </linecontains>
      </filterchain>
    </loadfile>
    <echo/>
    <echo>==== REM filtered contents of large-file.lfs ====</echo>
    <echo>${large-file-contents}</echo>
  </target>

</project>
