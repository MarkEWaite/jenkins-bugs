<project name="JENKINS-21000" default="increment" basedir=".">
<!-- jgit-fake -->

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Check JENKINS-20941 - submodule authentication">
    <echo>java is ${java.version}</echo>
    <exec executable="git">
      <arg value="pull"/>
    </exec>
    <buildnumber/>
