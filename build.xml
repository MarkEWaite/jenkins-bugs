    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="[${ant.project.name}] build++, was ${build.number}"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
      <arg value="cache"/>
    </exec>
    <exec executable="git">
      <arg value="push"/>
      <arg value="bare"/>
    </exec>
  </target>

  <target name="info" description="Check JENKINS-20941 - submodule authentication">
