<project name="JENKINS-36637" default="submit-changes" basedir=".">

  <!-- Check if submodule update is needed -->
  <target name="submodule-updated">
    <available file="bad/README.md" property="submodule.already.updated"/>
  </target>

  <!-- Update submodule if needed -->
  <target name="update-submodule" depends="submodule-updated" unless="submodule.already.updated">
    <exec executable="git">
      <arg value="submodule" />
      <arg value="update" />
      <arg value="--init" />
      <arg value="--recursive" />
    </exec>
  </target>

  <!-- Submit changes to repository using bad strings -->
  <target name="submit-changes" description="Submit changes" depends="update-submodule">
    <echo>java is ${java.version}</echo>
    <exec executable="python">
      <arg value="submit_changes.py" />
      <arg value="--empty-commits" /> <!-- empty commits cause changes to not be reported in Jenkins changes page -->
    </exec>
  </target>

  <!-- Info about branches -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <git command="branch" />
    <git command="log">
      <args>
        <arg value="-n" />
        <arg value="20" />
      </args>
    </git>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
