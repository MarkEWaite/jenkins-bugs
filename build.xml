<project name="ZD-64922" default="increment" basedir=".">

  <property environment="env"/>

  <target name="increment" description="Increment build number">
    <git command="pull">
      <args>
        <arg value="--all"/>
        <arg value="--prune"/>
      </args>
    </git>
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] ${user.name} build++, was ${build.number}"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info-and-push-tag" description="Report info about repo, tag repo and push the tag">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <git command="branch" />
    <!-- ZD-64922 asked how to tag a commit in a multibranch Pipeline. -->
    <echo>Displaying existing tags</echo>
    <git command="tag">
      <args>
        <arg value="-l"/>
      </args>
    </git>
    <echo>End of existing tags</echo>
    <!-- Read, increment, and reset build.number -->
    <buildnumber/>
    <git command="checkout">
      <args>
        <arg value="HEAD"/>
        <arg value="--"/>
        <arg value="build.number"/>
      </args>
    </git>
    <echo>Tag current build number</echo>
    <!-- Tag predecessor commit with previous build number -->
    <git command="tag">
      <args>
        <arg value="-a"/>
        <arg value="-m"/>
        <arg value="Annotated tag for ${ant.project.name} build ${build.number}"/>
        <arg value="${ant.project.name}-${build.number}-${env.JOB_NAME}"/>
        <arg value="HEAD"/>
      </args>
    </git>
    <!-- Push the head commit to assure that head commit is on remote -->
    <git command="push">
      <args>
        <arg value="--set-upstream"/>
        <arg value="origin"/>
        <arg value="${ant.project.name}"/>
      </args>
    </git>
    <!-- Push tags -->
    <git command="push">
      <args>
        <arg value="origin"/>
        <arg value="--tags"/>
      </args>
    </git>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
