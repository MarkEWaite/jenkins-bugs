<project name="JENKINS-29977" default="increment" basedir=".">

  <target name="increment" description="Increment build number">
    <git command="pull"/>
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="User interface truncates change messages ${ant.project.name} ${user.name} build++, was ${build.number} with an intentionally long first line of the commit message.  It was truncated in the Jenkins user interface before JENKINS-29977 was fixed"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <!-- JENKINS-29977 reports that the commit summary line in the Jenkins UI
         is truncated for display. -->
    <exec executable="./readChangesFromBuildUrl"/>
    <echo>readChangesFromBuildUrl script exited normally</echo>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
