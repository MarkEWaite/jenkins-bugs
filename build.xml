<project name="JENKINS-66054" default="increment" basedir=".">

  <property environment="env"/>
  <condition property="changeLogCount" value="${env.CHANGESET_SIZE}" else="0">
    <isset property="env.CHANGESET_SIZE"/>
  </condition>

  <!-- Set "is.older.git.branch" property if branch name contains "-older" -->
  <!-- Do not increment when working on the "JENKINS-66054-older" branch -->
  <exec executable="git" outputproperty="git.branch" failifexecutionfails="false">
    <arg line="rev-parse --abbrev-ref HEAD"/>
  </exec>
  <condition property="is.older.git.branch" value="true" else="false">
    <matches pattern=".*-older" string="${git.branch}"/>
  </condition>

  <target name="increment" description="Increment build number" unless="${is.older.git.branch}">
    <git command="pull" />
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] ${user.name} build++, was ${build.number}"/>
      </args>
    </git>
    <!-- push the previous commit to the "JENKINS-66054-older" branch so that changelog count remains 1 -->
    <git command="push">
      <args>
        <arg value="origin"/>
        <arg value="HEAD^:JENKINS-66054-older"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <git command="branch" />
    <!-- JENKINS-66054 reports that changelog entries are missing when using ChangelogToBranch extension -->
    <echo>Displaying ${changeLogCount} git log messages in changeset for this build - CHANGESET_SIZE=${env.CHANGESET_SIZE}</echo>
    <git command="log">
      <args>
        <arg value="-n"/>
        <arg value="${changeLogCount}"/>
      </args>
    </git>
    <echo>End of ${changeLogCount} git log messages in changeset for this build</echo>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
