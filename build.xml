<project name="JENKINS-33000" default="increment" basedir=".">
  <description>Also used in credentials-plugin-fake</description>

  <property name="build.number.file" value="bŨĨldÕ.ÑŨmbẼr"/>

  <target name="increment" description="Increment build number">
    <git command="pull" />
    <buildnumber file="${build.number.file}"/>
    <git command="add">
      <args>
        <arg value="${build.number.file}"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] ${user.name} build++, was ${build.number} in ${build.number.file}"/>
      </args>
    </git>
    <git command="push" />
    <git command="push">
      <args>
        <arg value="cache"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="bare"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <fileset id="b.contents" dir="." includes="b*mb*r"/> 
    <property name="prop.b.contents" refid="b.contents"/>
    <echo>b contents is ${prop.b.contents}</echo>
    <java classname="org.apache.tools.ant.Main">
        <arg value="-projecthelp" />
        <arg value="-buildfile" />
        <arg value="${ant.file}" />
    </java>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
