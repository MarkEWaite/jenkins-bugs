<project name="JENKINS-31826" default="increment" basedir=".">

  <target name="increment" description="Increment build number">
    <git command="pull" />
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] ${user.name} build++, was ${build.number}"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <!-- JENKINS-31826 reports that checkout of a specific SHA1 fails.  -->
    <!-- Report local SHA1 -->
    <echo>Local SHA1 checkout is:</echo>
    <git command="log">
      <args>
        <arg value="-n"/>
        <arg value="1"/>
        <arg value="--decorate"/>
        <arg value="--format=oneline"/>
      </args>
    </git>
    <!-- Report remote SHA1 -->
    <echo>Remote SHA1 head of branch is:</echo>
    <git command="ls-remote">
      <args>
        <arg value="-h"/>
        <arg value="https://github.com/MarkEWaite/jenkins-bugs"/>
        <arg value="refs/heads/${ant.project.name}"/>
      </args>
    </git>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
