<project name="JENKINS-26660" default="increment" basedir=".">

  <target name="increment" description="Increment build number">
    <git command="pull" />
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] ${user.name} build++, was ${build.number}"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <!-- JENKINS-26660 requests optional submodule removal by clean -->
    <tempfile destdir="." prefix="git-subdir" property="git.submodule.dir" />
    <mkdir dir="${git.submodule.dir}" />
    <exec dir="${git.submodule.dir}" executable="git">
      <arg value="init" />
    </exec>
    <echo file="${git.submodule.dir}/submodule-README">This is the submodule README</echo>
    <resourcecount property="count.git.subdirs">
      <fileset dir=".">
        <include name="**/submodule-README"/>
      </fileset>
    </resourcecount>
    <!-- Ant counts files so the submodule-README is written to the submodule dir -->
    <echo message="Directory count: ${count.git.subdirs}"/>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
