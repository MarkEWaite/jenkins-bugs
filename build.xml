<project name="JENKINS-48818" default="increment" basedir=".">

  <target name="increment" description="Increment build number">
    <git command="pull" />
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] ${user.name} build++, was ${build.number}"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <git command="branch" />

    <!-- JENKINS-48818 reports that a space in a submodule name fails to update. -->
    <fileset id="no.space.contents" dir="modules/jenkins-pipeline-utils" includes="LICENSE"/> 
    <property name="prop.no.space.contents" refid="no.space.contents"/>
    <echo>No space contents check: ${prop.no.space.contents}</echo>

    <fileset id="has.space.contents" dir="modules/jenkins pipeline utils name" includes="README.md"/> 
    <property name="prop.has.space.contents" refid="has.space.contents"/>
    <echo>Has space contents check: ${prop.has.space.contents}</echo>

    <!-- Echo if README is found, should not be found due to sparse checkout -->
    <fileset id="has.README" dir="." includes="README.md"/> 
    <property name="prop.has.README" refid="has.README"/>
    <echo>Has README check: '${prop.has.README}'</echo>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
