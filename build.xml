<project name="JENKINS-42597" default="increment" basedir=".">

  <property name="build.number.file" value="build-100%-number"/>
  <property name="build.number.copy1" value="build-%ABC%-number"/>
  <property name="build.number.copy2" value="build-^%ABC%^-number"/>

  <target name="increment" description="Increment build number">
    <git command="pull">
      <args>
        <arg value="--all"/>
        <arg value="--prune"/>
      </args>
    </git>
    <buildnumber file="${build.number.file}"/>
    <copy file="${build.number.file}" tofile="${build.number.copy1}" overwrite="true"/>
    <copy file="${build.number.file}" tofile="${build.number.copy2}" overwrite="true"/>
    <git command="commit">
      <args>
        <arg value="${build.number.file}"/>
        <arg value="${build.number.copy1}"/>
        <arg value="${build.number.copy2}"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] build++, was ${build.number}"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <echo>Start of git log messages on this branch from last 15 minutes</echo>
    <git command="branch" />
    <!-- JENKINS-42597 reports the changes output for files with names
         containing percent characters are not properly escaped in the
         Jenkins UI. -->
    <echo>Displaying git log messages on this branch from last 15 minutes</echo>
    <git command="log">
      <args>
        <arg value="--numstat"/>
        <arg value="--since='15 minutes ago'"/>
      </args>
    </git>
    <echo>End of git log messages on this branch from last 15 minutes</echo>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
