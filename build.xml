<project name="JENKINS-55284" default="increment" basedir=".">

  <property name="tag.name" value="JENKINS-55284-moving"/>

  <target name="increment" description="Increment build number">
    <git command="pull">
      <args>
        <arg value="--all"/>
        <arg value="--prune"/>
        <arg value="--force"/>
      </args>
    </git>
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] ${user.name} build++, was ${build.number}"/>
      </args>
    </git>
    <!-- Delete existing tag -->
    <git command="tag">
      <args>
        <arg value="-d"/>
        <arg value="${tag.name}"/>
      </args>
    </git>
    <!-- Create new tag -->
    <git command="tag">
      <args>
        <arg value="-a"/>
        <arg value="-m"/>
        <arg value="Tag build number 1+${build.number}"/>
        <arg value="${tag.name}"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="origin"/>
        <arg value="--force"/>
        <arg value="${tag.name}"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <!-- JENKINS-55284 reports that git 2.20 does not pull updated tags -->
    <git command="tag">
      <args>
        <arg value="-l"/>
        <arg value="${tag.name}"/>
      </args>
    </git>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
