<project name="JENKINS-26100-declarative-skipDefaultCheckout" default="increment" basedir=".">

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Show JENKINS-26100-declarative-skipDefaultCheckout is not repeatable">
    <echo>java is ${java.version}</echo>
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="${user.name} on JENKINS-26100-declarative-skipDefaultCheckout, build was ${build.number}"/>
      <arg value="build.number"/>
    </exec>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <!-- JENKINS-26100-declarative-skipDefaultCheckout requests LocalBranch with '**' uses origin name to checkout branch. -->
    <echo>user dir is ${user.dir}</echo>
  </target>

</project>
