<project name="JENKINS-29482" default="increment" basedir=".">

  <!-- Increment build number, commit the change -->
  <target name="increment" description="Show JENKINS-29482 is a bug">
    <echo>java is ${java.version}</echo>
    <buildnumber/>
    <echo>Build number was ${build.number}</echo>
    <exec executable="git">
      <arg value="add"/>
      <arg value="build.number"/>
      <arg value="."/>
    </exec>
    <exec executable="git">
      <arg value="commit"/>
      <arg value="-m"/>
      <arg value="${user.name} ビルド番号をインクリメント、${build.number} でした"/>
      <arg value="build.number"/>
    </exec>
  </target>

</project>
