<project name="JENKINS-40529" default="increment" basedir=".">

  <property environment="env"/>
  <property name="tag.base" value="stale/JENKINS-40529"/>

  <target name="increment" description="Increment build number">
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] build++, was ${build.number}"/>
      </args>
    </git>
    <exec executable="./remove-all-stale-tags-and-push-one">
      <arg value="${tag.base}-${build.number}"/>
    </exec>
    <git command="push">
      <args>
        <arg value="origin"/>
        <arg value="--tags"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="cache"/>
        <arg value="--tags"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="bare"/>
        <arg value="--tags"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="gitea-server"/>
        <arg value="--tags"/>
      </args>
    </git>
  </target>

  <!-- Info about this repository -->
  <target name="info" description="Report info about this repo">
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <!-- JENKINS-40529 adds stale tag removal on fetch -->
    <exec executable="./count-stale-tags"/>
    <echo file="workspace-use-history" append="true">Workspace used by build number ${env.BUILD_NUMBER}</echo>

  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
