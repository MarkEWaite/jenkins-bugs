<project name="JENKINS-56326" default="increment" basedir=".">

  <target name="increment" description="Increment build number">
    <git command="pull">
      <args>
        <arg value="--all"/>
      </args>
    </git>
    <buildnumber/>
    <git command="add">
      <args>
        <arg value="build.number"/>
      </args>
    </git>
    <git command="commit">
      <args>
        <arg value="-m"/>
        <arg value="[${ant.project.name}] ${user.name} build++, was ${build.number}"/>
      </args>
    </git>
    <git command="push">
      <args>
        <arg value="--all"/>
      </args>
    </git>
    <echo>sleeping 53 seconds</echo>
    <sleep seconds="53"/> <!-- Wait long enough for job to start but not finish -->
    <echo>slept 53 seconds, awake and continuing</echo>
  </target>

  <!-- Info about this repository and a sleep -->
  <target name="info" description="Report info about this repo">
    <exec executable="git" outputproperty="git.HEAD">
      <arg value="rev-parse"/>
      <arg value="HEAD"/>
    </exec>
    <echo>Sleeping git HEAD is ${git.HEAD}</echo>
    <echo>java is ${java.version}</echo>
    <echo>user dir is ${user.dir}</echo>
    <!-- JENKINS-56326 reports that later clones don't use same SHA1 as original -->
    <echo>sleeping 90 seconds</echo>
    <sleep seconds="90"/> <!-- Wait long enough for job to start but not finish -->
    <echo>slept 90 seconds, awake and continuing</echo>
  </target>

  <!-- Info about this repository without sleep -->
  <target name="info-sleepless" description="Report info about this repo without sleeping">
    <exec executable="git" outputproperty="git.HEAD">
      <arg value="rev-parse"/>
      <arg value="HEAD"/>
    </exec>
    <echo>Sleepless git HEAD is ${git.HEAD}</echo>
  </target>

  <!-- From https://gist.github.com/davejlong/874521 -->
  <macrodef name="git">
    <attribute name="command" />
    <attribute name="dir" default="" />
    <element name="args" optional="true" />
    <sequential>
      <echo message="git @{command}" />
      <exec executable="git" dir="@{dir}">
        <arg value="@{command}" />
        <args/>
      </exec>
    </sequential>
  </macrodef>

</project>
