#!/bin/bash

if [ -h Jenkinsfile ]; then
        git rm -f Jenkinsfile
        cp subdir/Jenkinsfile .
        git add Jenkinsfile
        git commit -m "Make Jenkinsfile a copy of subdir/Jenkinsfile"
else
        git rm -f Jenkinsfile
        ln -s subdir/Jenkinsfile .
        git add Jenkinsfile
        git commit -m "Make Jenkinsfile a symlink to subdir/Jenkinsfile"
fi
